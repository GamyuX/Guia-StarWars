<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.starwars.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.starwars.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_planetMainActivity"
            app:destination="@id/planetMainActivity" />
        <action
            android:id="@+id/action_homeFragment_to_characterActivityMain"
            app:destination="@id/characterActivityMain" />
        <action
            android:id="@+id/action_homeFragment_to_characterActivityMain2"
            app:destination="@id/characterActivityMain" />
        <action
            android:id="@+id/action_homeFragment_to_spaceshpActivityMain"
            app:destination="@id/spaceshpActivityMain" />
        <action
            android:id="@+id/action_homeFragment_to_spaceshpActivityMain2"
            app:destination="@id/spaceshpActivityMain" />
        <action
            android:id="@+id/action_homeFragment_to_spaceshpActivityMain3"
            app:destination="@id/spaceshpActivityMain" />
        <action
            android:id="@+id/action_homeFragment_to_spaceshpActivityMain4"
            app:destination="@id/spaceshpActivityMain" />
    </fragment>
    <activity
        android:id="@+id/planetMainActivity"
        android:name="com.example.starwars.ui.planet.PlanetMainActivity"
        android:label="planet_activity_main"
        tools:layout="@layout/planet_activity_main" />
    <activity
        android:id="@+id/characterActivityMain"
        android:name="com.example.starwars.ui.character.CharacterActivityMain"
        android:label="character_activity_main"
        tools:layout="@layout/character_activity_main" />
    <activity
        android:id="@+id/spaceshpActivityMain"
        android:name="com.example.starwars.ui.spaceship.SpaceshpActivityMain"
        android:label="spaceshp_activity_main"
        tools:layout="@layout/spaceshp_activity_main" />


</navigation>